/**
 * MENU-05 — ESPERIENZE — Raffaele Vicenzi Autore — v1.0
 *
 * Base: derivata da MENU-04 (stessa topbar, stessi font, stessi fix BASE_URL).
 *
 * Struttura:
 * - 4 TAB (una per esperienza) in ordine.
 * - TAB attiva verde (Esperienza) o giallina (Lavoro).
 * - Pannello sotto le schede si colora in base al tipo (esperienza/lavoro), pagina invariata.
 *
 * Note tecniche:
 * - URL asset assoluti via BASE_URL (u()).
 * - Font via @font-face INIETTATI in <head> (niente url("fonts/...") nel CSS estratto).
 */

// ===== BASE URL (subpath safe) =====
const baseHref = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

const u = (p: string): string => baseHref + p.replace(/^\/+/, "");

// ===== LINKS MENU (come index) =====
const hrefHome = baseHref;
const hrefM02 = u("menu-02/");
const hrefM03 = u("menu-03/");
const hrefM04 = u("menu-04/");
const hrefM05 = u("menu-05/");
const hrefM06 = u("menu-06/");

// ===== ASSET =====
const profileImg = u("img/profilo.jpg");
const heroBgUrl = u("img/hero.jpg");

// ===== FONTS (public/fonts) =====
const candFontUrl = u("fonts/candara.ttf");
const mrBFontUrl = u("fonts/MrB.ttf");
const dsAccentFontUrl = u("fonts/DSAccent.ttf");

const fontFaceCSS = `
@font-face{
  font-family:"Candara";
  src:url("${candFontUrl}") format("truetype");
  font-weight:400;
  font-style:normal;
  font-display:swap;
}
@font-face{
  font-family:"MrB";
  src:url("${mrBFontUrl}") format("truetype");
  font-weight:400;
  font-style:normal;
  font-display:swap;
}
@font-face{
  font-family:"DSAccent";
  src:url("${dsAccentFontUrl}") format("truetype");
  font-weight:400;
  font-style:normal;
  font-display:swap;
}
`;

// ===== GALLERIE (public/img/esperienze) =====
const P01 = Array.from({ length: 8 },  (_, i) => `img/esperienze/P01_${String(i + 1).padStart(2, "0")}.jpg`);
const P02 = Array.from({ length: 15 }, (_, i) => `img/esperienze/P02_${String(i + 1).padStart(2, "0")}.jpg`);
const P03 = Array.from({ length: 24 }, (_, i) => `img/esperienze/P03_${String(i + 1).padStart(2, "0")}.jpg`);

// helper urls assolute
const U = (rel: string) => u(rel);
