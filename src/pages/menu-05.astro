        /* Sfondo pagina */
        --expPaper:#f7f1e8;

        /* card trasparente */
        --expCard: rgba(255,255,255,0.62);
        --expBorder: rgba(0,0,0,0.12);

        /* ✅ PANNELLO OPACO (niente trasparenze) */
