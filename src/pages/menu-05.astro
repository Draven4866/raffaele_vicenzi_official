      }

      .tab{
        appearance: none;
        border: 4px solid var(--frameWhite);
        border-bottom: 0;
        background: rgba(35, 86, 150, 0.22);
        color: var(--ink);
        font-family: "MrB","Candara",system-ui,sans-serif;
        font-size: 14px;
        padding: 12px 14px 11px;
        border-radius: 16px 16px 0 0;
        cursor: pointer;
        box-shadow: 0 -10px 22px rgba(0,0,0,0.08);
        position: relative;
        transform: translateY(8px);
        transition: background-color .16s ease, filter .16s ease, transform .16s ease;
      }

      .tab:hover{ filter: brightness(1.03); }

      .tab.isActive{
        transform: translateY(4px);
      }
      .tab.isActive[data-kind="exp"]{
        background: var(--menuHover);
      }
      .tab.isActive[data-kind="work"]{
        background: var(--workHover);
      }

      .tab:focus-visible{
        outline: 2px solid rgba(0,0,0,0.55);
        outline-offset: 3px;
      }

      /* ===== PANNELLO SOTTO ===== */
      .panelStage{
        margin-top: -4px;
        border: 4px solid var(--frameWhite);
        border-radius: 18px;
        background: var(--panelBase);
        overflow: hidden;
      }
      .panelStage[data-kind="exp"]{ background: var(--panelExp); }
      .panelStage[data-kind="work"]{ background: var(--panelWork); }

      .panel{ padding: 18px 16px 22px; }
      .panel.isShow{ display:block; }
      .panel[hidden]{ display:none; }

      .workTitle{
        margin: 0 0 10px;
        font-family:"DSAccent","Candara",system-ui,sans-serif;
        font-weight: 400;
        font-size: 25px;
        line-height: 1.15;
      }
      .workTitleMark{
        display:inline-block;
        padding: 6px 10px;
        border-radius: 10px;
        background: var(--titleMark);
      }

      .workSub{
        margin: 0 0 12px;
        font-family:"MrB","Candara",system-ui,sans-serif;
        font-size: 18px;
        opacity: 0.92;
        max-width: 90ch;
      }

      /* ===== GALLERIA ===== */
      .honeyWrap{ margin: 10px 0 0; }

      .honeycomb{
        display:grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0;
        padding: 0;
        border: 0;
        border-radius: 18px;
        background: rgba(255,255,255,0.00);
      }

      .hex{
        position: relative;
        display:block;
        width: 100%;
        aspect-ratio: 1 / 1;
        outline: none;
      }

      .hexInner{
        position:absolute;
        inset:0;
        border-radius: 0;
        background: rgba(255,255,255,0.35);
        border: 10px solid var(--frameWhite);
        box-shadow: 0 14px 34px rgba(0,0,0,0.10);
        overflow:hidden;

        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;

        clip-path: none;

        transform: scale(1);
        transition: transform .18s ease, filter .18s ease;
      }

      .hexInner::after{
        content:"";
        position:absolute;
        inset:0;
        background: rgba(255,255,255,0.00);
        transition: background .18s ease;
        pointer-events:none;
      }

      .hex:hover .hexInner{
        transform: scale(1.04);
        filter: brightness(1.02);
      }
      .hex:hover .hexInner::after{
        background: rgba(255,255,255,0.28);
      }

      /* FOOTER */
      .footer{
        padding: 22px 18px;
        background: rgba(255,255,255,0.85);
        border-top: 1px solid rgba(0,0,0,0.10);
      }

      @media (max-width: 900px){
        .brandLine{ white-space: normal; }
        .tabs{ gap: 8px; }
        .tab{ padding: 11px 12px 10px; }
        .panel{ padding: 16px 14px 18px; }
        .honeycomb{ grid-template-columns: repeat(3, 1fr); }
      }
      /* YouTube row */
      .ytRow{
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 14px;
      }

      /* Box 16:9 (funziona su mobile) */
      .ytBox{
        position: relative;
        width: 100%;
        border-radius: 16px;
        overflow: hidden;
        background: #000;
        border: 1px solid rgba(0,0,0,0.12);

        /* metodo moderno */
        aspect-ratio: 16 / 9;
      }

      /* fallback per browser vecchi che non supportano aspect-ratio */
      @supports not (aspect-ratio: 16 / 9){
        .ytBox{
          height: 0;
          padding-top: 56.25%; /* 16:9 */
        }
      }

      .ytBox iframe{
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        border: 0;
        display: block;
      }

      /* mobile: 1 colonna */
      @media (max-width: 900px){
        .ytRow{ grid-template-columns: 1fr; }
      }
    </style>
  </body>
