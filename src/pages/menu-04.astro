/**
 * MENU-04 — ARTE SCIAMANICA — Raffaele Vicenzi Autore — v1.2
 *
 * Base: derivata da MENU-02 (stessa topbar, stessi font, stessi fix BASE_URL).
 *
 * Modifiche v1.2:
 * - TAB attiva (pannello selezionato) colorata con lo stesso “verdino” dei tasti top (--menuHover).
 * - Titolo opere: font DSAccent (non MrB).
 * - Rimossa la didascalia sotto l’alveare.
 * - Inserite le immagini negli alveari usando la nomenclatura:
 *   P01_S01_01.jpg ... P01_S01_10.jpg
 *   P01_S02_01.jpg ... P01_S02_07.jpg
 *   P02_S01_01.jpg ... P02_S01_05.jpg
 *   P03_S01_01.jpg (singola => honeycomb.single)
 *
 * Note tecniche:
 * - URL asset assoluti via BASE_URL (u()).
 * - Font via @font-face INIETTATI in <head> (niente url("fonts/...") nel CSS estratto).
 */

// ===== BASE URL (subpath safe) =====
const baseHref = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

const u = (p: string): string => baseHref + p.replace(/^\/+/, "");

// ===== LINKS MENU (come index) =====
const hrefHome = baseHref;
const hrefM02 = u("menu-02/");
const hrefM03 = u("menu-03/");
const hrefM04 = u("menu-04/");
const hrefM05 = u("menu-05/");
const hrefM06 = u("menu-06/");

// ===== ASSET =====
const profileImg = u("img/profilo.jpg");
const heroBgUrl = u("img/hero.jpg");

// ===== FONTS (public/fonts) =====
const candFontUrl = u("fonts/candara.ttf");
const mrBFontUrl = u("fonts/MrB.ttf");
const dsAccentFontUrl = u("fonts/DSAccent.ttf");

const fontFaceCSS = `
@font-face{
  font-family:"Candara";
  src:url("${candFontUrl}") format("truetype");
  font-weight:400;
  font-style:normal;
  font-display:swap;
}
@font-face{
  font-family:"MrB";
  src:url("${mrBFontUrl}") format("truetype");
  font-weight:400;
  font-style:normal;
  font-display:swap;
}
@font-face{
  font-family:"DSAccent";
  src:url("${dsAccentFontUrl}") format("truetype");
  font-weight:400;
  font-style:normal;
  font-display:swap;
}
`;

// ===== GALLERIE (nomi file come da tua nomenclatura) =====
// P01 / S01 => 01..10
const P01S01 = Array.from({ length: 10 }, (_, i) => `img/arte_sciamanica/P01_S01_${String(i + 1).padStart(2, "0")}.jpg`);
// P01 / S02 => 01..07
const P01S02 = Array.from({ length: 7 }, (_, i) => `img/arte_sciamanica/P01_S02_${String(i + 1).padStart(2, "0")}.jpg`);
// P02 / S01 => 01..05
const P02S01 = Array.from({ length: 5 }, (_, i) => `img/arte_sciamanica/P02_S01_${String(i + 1).padStart(2, "0")}.jpg`);
// P03 / S01 => 01 (singola)
const P03S01 = [`img/arte_sciamanica/P03_S01_01.jpg`];

// helper urls assolute
const U = (rel: string) => u(rel);
