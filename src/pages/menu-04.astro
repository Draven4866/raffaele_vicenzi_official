        .honeyWrap.honeyFloat{
          float: none;
          width: 100%;
          max-width: none;
          margin: 12px 0 14px;
        }
      }

      .honeycomb{
        display:grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0;
        padding: 0;
        border: 0;
        border-radius: 18px;
        background: rgba(255,255,255,0.00);
      }

      /* singola foto: cella grande */
      .honeycomb.single{
        grid-template-columns: minmax(260px, 420px);
        justify-content: start;
      }
      .hexLabel{ display:none !important; }

      .hex{
        position: relative;
        display:block;
        width: 100%;
        aspect-ratio: 1 / 1;
        outline: none;
      }

      .hexInner{
        position:absolute;
        inset:0;
        border-radius: 0;
        background: rgba(255,255,255,0.35);
        border: 10px solid var(--frameWhite);
        box-shadow: 0 14px 34px rgba(0,0,0,0.10);
        overflow:hidden;
        display:flex;
        align-items:center;
        justify-content:center;

        /* anteprima */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;

        /* “quadrato” */
        clip-path: none;

        transform: scale(1);
        transition: transform .18s ease, filter .18s ease;
      }

      /* hover: evidenzia + velo bianco */
      .hexInner::after{
        content:"";
        position:absolute;
        inset:0;
        background: rgba(255,255,255,0.00);
        transition: background .18s ease;
        pointer-events:none;
      }
      
      .hex:hover .hexInner{
        transform: scale(1.04);
        filter: brightness(1.02);
      }
      .hex:hover .hexInner::after{
        background: rgba(255,255,255,0.28);
      }

      .hexLabel{
