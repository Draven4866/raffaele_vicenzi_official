        justify-content: flex-end;
      }
      .navItem{
        padding: 10px 12px;
        border-radius: 999px;
        background: rgba(0,0,0,0.05);
        border: 1px solid rgba(0,0,0,0.10);
        font-size: 14px;
        transition: background-color .16s ease, transform .16s ease, filter .16s ease;
        position: relative;
        will-change: transform;
      }
      .navItem:not(.navDisabled):hover{
        background: var(--menuHover);
        animation: navShakeY 0.65s ease-in-out infinite;
      }
      .navItem:focus-visible{
        outline: 2px solid rgba(0,0,0,0.55);
        outline-offset: 3px;
      }
      .navDisabled{
        opacity: 0.45;
        cursor: default;
        user-select:none;
        background: rgba(0,0,0,0.03);
      }
      .isActive{
        background: rgba(120,170,255,0.20);
        border-color: rgba(0,0,0,0.10);
      }

      @keyframes navShakeY{
        0%   { transform: translateY(0); }
        25%  { transform: translateY(-2px); }
        50%  { transform: translateY(0); }
        75%  { transform: translateY(2px); }
        100% { transform: translateY(0); }
      }

      /* STAGE */
      .artStage{
        position: relative;
        min-height: calc(100vh - 72px);
        padding: 42px 18px 56px;
        background: var(--artPaper);
      }

      .artStage::before{
        content:"";
        position:absolute;
        inset:0;
        background-image: var(--stageBkg);
        background-size: cover;
        background-position: center;
        opacity: 0.14;
        filter: saturate(1.05) contrast(1.02);
        pointer-events:none;
      }
      .artStage::after{
        content:"";
        position:absolute;
        inset:0;
        background: linear-gradient(to bottom, rgba(255,255,255,0.55), rgba(247,241,232,0.92));
        pointer-events:none;
      }

      .artCard{
        position: relative;
        z-index: 1;
        max-width: 980px;
        width: 100%;
        margin: 0 auto;

        border-radius: 22px;
        background: var(--artCard);
        border: 1px solid var(--artBorder);
        backdrop-filter: blur(12px) saturate(160%);
        box-shadow: 0 18px 55px rgba(0,0,0,.12);
        overflow: hidden;
      }

      .artHead{
        padding: 20px 20px 12px;
        border-bottom: 1px solid rgba(0,0,0,0.08);
        background: rgba(255,255,255,0.30);
      }
      .artTitle{
        margin: 0;
        font-family:"DSAccent","Candara",system-ui,sans-serif;
        font-weight: 400;
        font-size: 34px;
        line-height: 1.05;
      }
      .artSubtitle{
        margin: 8px 0 0;
        font-family:"MrB","Candara",system-ui,sans-serif;
        font-size: 18px;
        opacity: 0.92;
        max-width: 80ch;
      }

      /* ===== TABS ATTACCATE ===== */
      .tabsWrap{ padding: 16px 16px 20px; }
      .tabs{
        display:flex;
        gap: 10px;
        align-items:flex-end;
        flex-wrap: wrap;
        margin: 0;
        padding: 0 2px;
      }

      .tab{
        appearance: none;
        border: 4px solid var(--frameWhite);
        border-bottom: 0;
        background: rgba(35, 86, 150, 0.22);
        color: var(--ink);
        font-family: "MrB","Candara",system-ui,sans-serif;
        font-size: 14px;
        padding: 12px 14px 11px;
        border-radius: 16px 16px 0 0;
        cursor: pointer;
        box-shadow: 0 -10px 22px rgba(0,0,0,0.08);
        position: relative;
        transform: translateY(8px);
        transition: background-color .16s ease, filter .16s ease, transform .16s ease;
      }

      .tab:hover{ filter: brightness(1.03); }

      /* ‚úÖ TAB/PANNELLO SELEZIONATO = verdino come menu top */
      .tab.isActive{
        background: var(--menuHover);
        transform: translateY(4px);
      }

      .tab:focus-visible{
        outline: 2px solid rgba(0,0,0,0.55);
        outline-offset: 3px;
      }

      /* ===== PANNELLO SOTTO ===== */
      .panelStage{
        margin-top: -4px;
        border: 4px solid var(--frameWhite);
        border-radius: 18px;
        background: var(--panelBlue);
        overflow: hidden;
      }

      .panel{ padding: 18px 16px 22px; }
      .panel.isShow{ display:block; }
      .panel[hidden]{ display:none; }

      /* ‚úÖ Titolo opere con DSAccent + 25px */
      .workTitle{
        margin: 0 0 12px;
        font-family:"DSAccent","Candara",system-ui,sans-serif;
        font-weight: 400;
        font-size: 25px;
        line-height: 1.15;
      }
      .workTitleMark{
        display:inline-block;
        padding: 6px 10px;
        border-radius: 10px;
        background: var(--titleMark);
      }

      /* Titolo striscia (interno pannello) */
      .stripeTitle{
        margin: 18px 0 10px;
        font-family:"MrB","Candara",system-ui,sans-serif;
        font-size: 25px;
        font-weight: 400;
      }
      .stripeMark{
        display:inline-block;
        padding: 6px 10px;
        border-radius: 10px;
        background: rgba(255,255,255,0.55);
        border: 1px solid rgba(0,0,0,0.10);
      }

      .panelText{
        font-family:"Candara",system-ui,-apple-system,Segoe UI,Roboto,Arial;
        font-size: 16px;
      }
      .panelText p{
        margin: 0 0 14px;
        text-align: justify;
        text-justify: inter-word;
        hyphens: auto;
      }

      /* ===== ALVEARE ===== */
    
      .honeyWrap.honeyFloat{
        float: left;
        width: 50%;
        max-width: 520px;
        margin: 12px 18px 12px 0; /* spazio a destra per il testo */
      }

      .clearFloat{ clear: both; }

      @media (max-width: 900px){
        .honeyWrap.honeyFloat{
          float: none;
          width: 100%;
          max-width: none;
          margin: 12px 0 14px;
        }
      }

      .honeycomb{
        display:grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0;
        padding: 0;
        border: 0;
        border-radius: 18px;
        background: rgba(255,255,255,0.00);
      }

      /* singola foto: cella grande */
      .honeycomb.single{
        grid-template-columns: minmax(260px, 420px);
        justify-content: start;
      }
      .hexLabel{ display:none !important; }

      .hex{
        position: relative;
        display:block;
        width: 100%;
        aspect-ratio: 1 / 1;
        outline: none;
      }

      .hexInner{
        position:absolute;
        inset:0;
        border-radius: 0;
        background: rgba(255,255,255,0.35);
        border: 10px solid var(--frameWhite);
        box-shadow: 0 14px 34px rgba(0,0,0,0.10);
        overflow:hidden;
        display:flex;
        align-items:center;
        justify-content:center;

        /* anteprima */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;

        /* ‚Äúquadrato‚Äù */
        clip-path: none;

        transform: scale(1);
        transition: transform .18s ease, filter .18s ease;
      }

      /* hover: evidenzia + velo bianco */
      .hexInner::after{
        content:"";
        position:absolute;
        inset:0;
        background: rgba(255,255,255,0.00);
        transition: background .18s ease;
        pointer-events:none;
      }
      
      .hex:hover .hexInner{
        transform: scale(1.04);
        filter: brightness(1.02);
      }
      .hex:hover .hexInner::after{
        background: rgba(255,255,255,0.28);
      }

      .hexLabel{
        position: relative;
        z-index: 1;
        font-family:"MrB","Candara",system-ui,sans-serif;
        font-size: 13px;
        padding: 8px 10px;
        border-radius: 10px;
        background: rgba(255,255,255,0.75);
        border: 1px solid rgba(0,0,0,0.10);
      }

      /* FOOTER */
      .footer{
        padding: 22px 18px;
        background: rgba(255,255,255,0.85);
        border-top: 1px solid rgba(0,0,0,0.10);
      }

      @media (max-width: 900px){
        .brandLine{ white-space: normal; }
        .tabs{ gap: 8px; }
        .tab{ padding: 11px 12px 10px; }
        .panel{ padding: 16px 14px 18px; }
        .honeycomb{ grid-template-columns: repeat(3, 1fr); }
      }
    </style>
  </body>
</html>
