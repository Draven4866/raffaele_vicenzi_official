        const tabs = Array.from(document.querySelectorAll(".tab"));
        const panels = Array.from(document.querySelectorAll(".panel"));
        if (!tabs.length || !panels.length) return;

        const panelIds = panels.map((p) => p.id);

        const normalizeHash = () => {
          const raw = (location.hash || "").replace(/^#/, "").trim();
          if (!raw) return "";
          if (raw.startsWith("panelP")) return raw;
          if (/^P0[1-3]$/.test(raw)) return `panel${raw}`;
          return raw;
        };

        const setRoving = (activeId) => {
          tabs.forEach((t) => {
            const isActive = t.getAttribute("data-target") === activeId;
            t.classList.toggle("isActive", isActive);
            t.setAttribute("aria-selected", isActive ? "true" : "false");
            t.setAttribute("tabindex", isActive ? "0" : "-1");
          });
        };

        const show = (id, opts = {}) => {
          const targetId = panelIds.includes(id) ? id : panelIds[0];

          panels.forEach((p) => {
            const isTarget = p.id === targetId;
            p.hidden = !isTarget;
            p.classList.toggle("isShow", isTarget);
          });

          setRoving(targetId);

          if (opts.setHash) {
            const nextHash = `#${targetId}`;
            if (location.hash !== nextHash) history.replaceState(null, "", nextHash);
          }

          if (opts.focusTab) {
            const btn = tabs.find((t) => t.getAttribute("data-target") === targetId);
            if (btn) btn.focus({ preventScroll: true });
          }
        };

        const move = (dir) => {
          const current = tabs.findIndex((t) => t.classList.contains("isActive"));
          const i = current >= 0 ? current : 0;
          const next = (i + dir + tabs.length) % tabs.length;
          const id = tabs[next].getAttribute("data-target");
          if (id) show(id, { setHash: true, focusTab: true });
        };

        tabs.forEach((t) => {
          t.addEventListener("click", () => {
            const id = t.getAttribute("data-target");
            if (id) show(id, { setHash: true });
          });

          t.addEventListener("keydown", (e) => {
            if (e.key === "ArrowRight") {
              e.preventDefault();
              move(1);
            } else if (e.key === "ArrowLeft") {
              e.preventDefault();
              move(-1);
            } else if (e.key === "Home") {
              e.preventDefault();
              const id = tabs[0]?.getAttribute("data-target");
              if (id) show(id, { setHash: true, focusTab: true });
            } else if (e.key === "End") {
              e.preventDefault();
              const id = tabs[tabs.length - 1]?.getAttribute("data-target");
              if (id) show(id, { setHash: true, focusTab: true });
            }
          });
        });

        const initId = normalizeHash();
        if (initId && panelIds.includes(initId)) show(initId);
        else show(panelIds[0]);

        window.addEventListener("hashchange", () => {
          const id = normalizeHash();
          if (id && panelIds.includes(id)) show(id);
        });
      })();
    </script>

    <script is:inline>
      (() => {
        const topbar = document.querySelector(".topbar");
        const btn = document.querySelector(".navToggle");
        const nav = document.getElementById("siteNav");

        if (!topbar || !btn || !nav) return;

        const open = () => {
          topbar.classList.add("navOpen");
          btn.setAttribute("aria-expanded", "true");
        };

        const close = () => {
          topbar.classList.remove("navOpen");
          btn.setAttribute("aria-expanded", "false");
        };

        const toggle = () => {
          const isOpen = topbar.classList.contains("navOpen");
          isOpen ? close() : open();
        };

        btn.addEventListener("click", (e) => {
          e.stopPropagation();
          toggle();
        });

        document.addEventListener("click", (e) => {
          if (!topbar.classList.contains("navOpen")) return;
          const t = e.target;
          if (!(t instanceof Node)) return;
          if (!topbar.contains(t)) close();
        });

        document.addEventListener("keydown", (e) => {
          if (e.key === "Escape") close();
        });

        nav.querySelectorAll("a.navItem").forEach((a) => {
          a.addEventListener("click", () => close());
        });
      })();
    </script>

